---
import { getCollection } from "astro:content";

const projectsColletion = await getCollection('projects');
const projects = projectsColletion.map(project => project.data).flat();

---


<section class="h-screen text-white mb-10">
    <h4 class="text-4xl text-center mb-5">Projects</h4>
    <ul class="flex flex-col items-center w-full gap-5">
        {
            projects.map(project => (
                <li class="flex border-2 rounded w-4/5 flex-col">
                    <picture class="border-b-2">
                        <img class="" src={project.img} alt={`${project.name} image`} />
                    </picture>
                    <a class="text-center" href={project.deploy} target="_blank">{project.name}</a>

                </li>
            ))
        }
    </ul>
</section>