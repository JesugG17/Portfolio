<script>
  const divDescription = document.getElementById('description');
  const webDeveloper = document.querySelector('h4');
  const description = document.querySelector('p');

  window.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      divDescription?.classList.remove('opacity-0');
      webDeveloper?.classList.add('animate__animated', 'animate__fadeInUp', 'animate__delay-1s');
      description?.classList.add('animate__animated', 'animate__fadeInUp', 'animate__delay-2s');
      console.log('hello');
    }, 25);
  });
