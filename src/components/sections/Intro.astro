<section
  class="bg-hero h-screen relative flex flex-col gap-3 px-2 justify-center items-center text-white"
>
  <img
    class="absolute opacity-70 -z-10 object-cover w-full h-full"
    src="/img/background.jpg"
    alt="Hero image"
  />
  <h2
    class="animate__animated animate__fadeInLeft text-5xl bg-gradient-to-r text-center from-green-500 to-blue-500 font-bold text-transparent bg-clip-text md:text-6xl"
